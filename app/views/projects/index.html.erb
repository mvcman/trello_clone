<div class="flex flex-col p-4">
  <div class="flex justify-between">
    <div>
      <h1 class="font-bold text-4xl">Projects#index</h1>
      <p>Find me in app/views/projects/index.html.erb</p>
    </div>
    <%= link_to "Add new", new_project_path, data: { turbo_frame: :remote_modal }, class: "bg-emerald-600 text-white rounded-md py-1 px-2 self-start" %>
  </div> 

  <%= turbo_frame_tag "projects", class: "w-full grid grid-cols-3 gap-4" do %>
    <% @projects.each do |project| %>
      <%= render project %>
    <% end %>
  <% end %>
</div>
